<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sagar.chatapp.StatusActivity">

    <include
        android:id="@+id/status_toolbar"
        layout="@layout/app_bar" />

    <EditText
        android:id="@+id/status_change_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Type status here..."
        android:inputType="textMultiLine"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <Button
        android:id="@+id/status_save_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_change_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="2dp"
        android:text="Save Changes"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="18sp" />

</RelativeLayout>
